<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <h1>Referral Dashboard</h1>

<p>Total Number of Referrals: <%= totalReferralCount %></p>

<table>
    <thead>
        <tr>
            <th>Referral ID</th>
            <th>Click Count</th>
            <th>User Points</th>
        </tr>
    </thead>
    <tbody>
        <% referrals.forEach(referral => { %>
            <tr>
                <td><%= referral.referralId %></td>
                <td><%= referral.clickCount %></td>
                <td><%= referral.userPoints %></td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>
